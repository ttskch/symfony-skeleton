<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title>
        {%- block title %}
            {%- block subtitle %}{% endblock -%}
            {%- if block('subtitle') is not empty %} | {% endif -%}
            {%- block site_title %}My Symfony Micro Skeleton{% endblock -%}
        {% endblock -%}
    </title>
    <meta name="description" content="{{ block('subtitle') }}">
    <link rel="canonical" href="{{ app.request.uri }}">

    <link rel="apple-touch-icon" href="{{ asset('build/images/symfony-logo.png') }}" type="image/png">
    <link rel="shortcut icon" href="{{ asset('build/images/symfony-logo.png') }}" type="image/x-icon">

    <meta property="og:title" content="{{ block('title') }}">
    <meta property="og:type" content="website">
    <meta property="og:image" content="">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:site_name" content="{{ block('title') }}">
    <meta property="fb:admins" content="">
    <meta property="fb:app_id" content="">
    <meta property="og:description" content="{{ block('subtitle') }}">

    {% block stylesheets %}
        <link href="{{ asset('build/css/app.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>
{% block body %}
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home_index') }}">
                <img src="{{ asset('build/images/symfony-logo.png') }}" alt="Logo" width="25" height="25" class="mr-1">
                <b>{{ block('site_title') }}</b>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse-1">
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="#" class="nav-link">Item</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbar-dropdown-1" role="button" data-toggle="dropdown">
                            Dropdown
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbar-dropdown-1">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div id="content" class="my-3 mb-5">
            {% block flashes %}
                {% if app.session.flashbag.peekAll|length > 0 %}
                    {% for type, messages in app.session.flashbag.all %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            {% endblock %}

            {% block content %}
            {% endblock %}
        </div>
    </div>

    <script src="{{ asset('build/manifest.js') }}"></script>
    <script src="{{ asset('build/js/vendors.js') }}"></script>

    {% block javascripts %}
        <script src="{{ asset('build/js/app.js') }}"></script>
    {% endblock %}
{% endblock body %}
</body>
</html>
